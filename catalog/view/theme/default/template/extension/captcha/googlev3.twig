<script id="js-recaptchav3" src="https://www.google.com/recaptcha/api.js?render={{ site_key }}"></script>
{% if hide_mode %}<style>.grecaptcha-badge {opacity: 0!important}</style>{% endif %}
<input type="hidden" name="g-recaptchav3-response" id="recaptchaResponse">
{% if error_captcha %}
<div class="form-group">
	{% if route|slice(0, 9) == 'checkout/' %}
	<label class="control-label">&nbsp;</label>
	<div class="text-danger">{{ error_captcha }}</div>
	{% else %}
	<label class="col-sm-2 control-label">&nbsp;</label>
	<div class="col-sm-10"><div class="text-danger">{{ error_captcha }}</div></div>
	{% endif %}
</div>
{% endif %}
<script>$(document).ready(function(){var a=$("#js-recaptchav3").attr("src");$.getScript(a).done(function(b,c){grecaptcha.ready(function(){grecaptcha.execute("{{ site_key }}",{action:"{{ action }}"}).then(function(d){var e=document.getElementById("recaptchaResponse");e.value=d})})}).fail(function(d,c,b){console.log("Triggered ajaxError handler.")})});</script>
